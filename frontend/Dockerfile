FROM node:16-alpine

WORKDIR /app

# 复制package.json和package-lock.json
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制源代码
COPY . .

# 修改API地址为后端容器服务名
ENV REACT_APP_API_URL=http://backend:8000

# 构建生产环境版本
RUN npm run build

# 使用nginx提供静态文件服务
FROM nginx:alpine

# 复制构建产物
COPY --from=0 /app/build /usr/share/nginx/html

# 复制nginx配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 80

# 启动nginx
CMD ["nginx", "-g", "daemon off;"]